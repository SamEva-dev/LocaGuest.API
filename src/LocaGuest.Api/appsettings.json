{
  "Database": {
    "Provider": "postgresql"
  },
  "ConnectionStrings": {
    "DefaultConnection_Locaguest": "Host=localhost;Port=5432;Database=Locaguest;Username=postgres;Password=locaguest",
    "Audit_Locaguest": "Host=localhost;Port=5432;Database=Locaguest_Audit;Username=postgres;Password=locaguest"
  },
  "Jwt": {
    "Issuer": "AuthGate",
    "Audience": "LocaGuest"
  },
  "Locaguest": {
    "Url": "https://localhost:5001"
  },
  "HttpClients": {
    "LocaguestApi": {
      "BaseUrl": "https://localhost:5001"
    }
  },
  "App": {
    "FrontendUrl": "http://localhost:4200"
  },
  "EmailSettings": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "EnableSsl": true,
    "FromEmail": "noreply@locaguest.com",
    "FromName": "LocaGuest",
    "EnableEmailNotifications": true
  },
  "Stripe": {
    "SecretKey": "",
    "PublishableKey": "",
    "WebhookSecret": "",
    "SuccessUrl": "http://localhost:4200/app/settings?tab=billing&success=true",
    "CancelUrl": "http://localhost:4200/app/pricing"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq",
      "Serilog.Expressions",
      "Serilog.Sinks.PostgreSQL",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Thread"
    ],
    "MinimumLevel": {
      "DefaultConnection_Locaguest": "Debug",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Debug",
        "RabbitMq": "Verbose",
        "RulesEngine": "Verbose",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithClientIp",
      "WithCorrelationId",
      "WithProcessId"
    ],
    "Properties": {
      "Application": "LocaGuest.Api"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByExcluding",
                "Args": {
                  "expression": "StartsWith(SourceContext, 'Microsoft.EntityFrameworkCore')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "%LOCAGUEST_HOME%/log/Locaguest/LocaguestApi_log.txt",
                  "fileSizeLimitBytes": 104857600,
                  "rollOnFileSizeLimit": true,
                  "retainedFileCountLimit": 100,
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "StartsWith(SourceContext, 'Microsoft.EntityFrameworkCore')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "%LOCAGUEST_HOME%/log/Locaguest/EntityFramework/EntityFramework_log.txt",
                  "fileSizeLimitBytes": 104857600,
                  "rollOnFileSizeLimit": true,
                  "retainedFileCountLimit": 100,
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}",
                  "restrictedToMinimumLevel": "Information"
                }
              }
            ]
          }
        }
      },
      
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Host=localhost;Port=5432;Database=Locaguest_Audit;Username=postgres;Password=",
          "tableName": "AppLogs",
          "needAutoCreateTable": true,
          "schemaName": "public",
          "useCopy": false,
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "https://locaguest.com",
      "https://www.locaguest.com",
      "https://preprod.locaguest.com",
      "https://staging.locaguest.com"
    ]
  },
  "AuditRetention": {
    "Days": 7,
    "RunIntervalHours": 24
  },
  "Jobs": {
    "ContractActivation": {
      "IntervalSeconds": 60
    }
  },
  "AllowedHosts": "*"
}
