{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Debug",
        "RabbitMq": "Verbose",
        "RulesEngine": "Verbose"
      }
    },
    "Using": [ "Serilog.Sinks.File", "Serilog.Expressions" ],
    "WriteTo": [
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByExcluding",
                "Args": {
                  "expression": "StartsWith(SourceContext, 'Microsoft.EntityFrameworkCore')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "%LocaGuest_HOME%/log/LocaGuest/LocaGuestService_log.txt",
                  "fileSizeLimitBytes": 104857600,
                  "rollOnFileSizeLimit": true,
                  "retainedFileCountLimit": 100,
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "StartsWith(SourceContext, 'Microsoft.EntityFrameworkCore')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "%LocaGuest_HOME%/log/LocaGuest/EntityFramework/EntityFramework_log.txt",
                  "fileSizeLimitBytes": 104857600,
                  "rollOnFileSizeLimit": true,
                  "retainedFileCountLimit": 100,
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}",
                  "restrictedToMinimumLevel": "Information"
                }
              }
            ]
          }
        }
      }
    ]
  },
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:5001"
      }
    }
  },
  "Jwt": {
    "SecretKey": "A_SUPER_SECURE_KEY_CHANGE_ME",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "Authority": "http://localhost:8080/realms/LocaGuest",
        "Audience": "LocaGuest-api",
        "RequireHttpsMetadata": false
      }
    }
  },
  "ConnectionStrings": {
    "Sqlite": "Data/LocaGuest.db"
  },
  "Outlook": {
    "ClientId": "xxxx",
    "ClientSecret": "xxxx",
    "TenantId": "xxxx"
  },
  "FastAPI": {
    "Host": "127.0.0.1",
    "Port": 8000
  }

}